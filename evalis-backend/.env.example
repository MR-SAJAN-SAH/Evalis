# ===================================
# ENVIRONMENT CONFIGURATION EXAMPLE
# ===================================
# Copy this file to .env and fill in your actual values

# Node Environment (development | production)
NODE_ENV=development

# Server Port
PORT=3000

# ===================================
# DATABASE CONFIGURATION
# ===================================
# Superadmin Database
SUPERADMIN_DB_HOST=localhost
SUPERADMIN_DB_PORT=5432
SUPERADMIN_DB_USERNAME=postgres
SUPERADMIN_DB_PASSWORD=password
SUPERADMIN_DB_NAME=evalis_superadmin

# ===================================
# JWT CONFIGURATION
# ===================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRATION=24h

# ===================================
# CORS CONFIGURATION
# ===================================
# Allowed origins for CORS requests (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://evalis.vercel.app

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# ===================================
# PRODUCTION SETTINGS (for deployment)
# ===================================
# Uncomment and update these when deploying to production
# SUPERADMIN_DB_HOST=your-postgres-host.render.com
# SUPERADMIN_DB_PORT=5432
# SUPERADMIN_DB_USERNAME=evalis_user
# SUPERADMIN_DB_PASSWORD=your_strong_password_here
# CORS_ORIGIN=https://evalis.vercel.app
